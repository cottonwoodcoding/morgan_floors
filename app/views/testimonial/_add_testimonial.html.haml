#add_testimonial_modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-body
        %h2 Add a testimonial
        %form#testimonial_form{type: 'form', action: '/add_testimonial', method: 'post'}
          = hidden_field_tag :authenticity_token, form_authenticity_token
          .form-group
            %label{for: 'testimonal'} Testimonial
            %textarea#testimonal.form-control{name: 'testimonial', rows: 5, required: true, 'maxlength' => '255'}
          .form-group
            %label{for: 'name'} Name:
            %input#name.form-control{name: 'name', type: 'text'}
          .modal-footer
            .pull-right
              %button.btn.btn-default{type: 'button', 'data-dismiss' => 'modal'} Close
              %button.btn.btn-primary{type: 'submit'} Submit
