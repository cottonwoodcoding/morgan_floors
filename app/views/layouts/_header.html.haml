.navbar.navbar-default{role: 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => "#nav-items", 'data-toggle' => 'collapse', type: 'button'}
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a{href: '/'}
        #logo.pull-left
          %img{src: image_path('HarMorg-Flooring-Div_logo.png')}
        .nav-header
    .ss-links
      = render(partial: 'layouts/social_media_links', locals: {id: 'follow', classes: 'hidden-xs hidden-sm'})
    .collapse.navbar-collapse#nav-items.navbar-right
      %ul.nav.navbar-nav
        %li
          = link_to("Home", home_path, class: 'nav-item')
        %li
          = link_to("Gallery", gallery_path, class: 'nav-item')
        %li
          = link_to("Resources & Videos", resource_path, class: 'nav-item')
        %li
          = link_to("Testimonials", testimonial_path, class: 'nav-item')
        %li
          = link_to("FAQ", faq_path, class: 'nav-item')
        %li
          = link_to(contact_path, class: 'nav-item') do
            = fa_icon "envelope"
        %li.dropdown
          %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
            %b.fa.fa-gears
          %ul.dropdown-menu
            %li
              - if admin_signed_in?
                = link_to 'Edit Business Info', business_info_path
                = link_to 'Logout', destroy_admin_session_path, method: :delete, class: 'delete'
              - else
                = link_to 'Sign In', new_admin_session_path, method: :get
        %li
          = render(partial: 'layouts/social_media_links', locals: {id: 'no-follow', classes: 'visible-xs visible-s'})
